<Page
    x:Class="ABCSchool.ManageStudentPage"
    xmlns:local="using:ABCSchool"
    xmlns:common="using:ABCSchool.Common"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ABCSchool.ViewModels"
    NavigationCacheMode="Enabled"    
    mc:Ignorable="d"
    
    >

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <!--<Page.DataContext>
        <local:App x:Name="App"></local:App>
        <vm:MainViewModel x:Name="MainViewModel" />
    </Page.DataContext>-->

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:Name="AddItemBtn" Label="Add Item" Icon="Add" Click="AddItem" />
            <AppBarButton x:Name="EditItemBtn" Label="Edit Item" Icon="Edit" Click="EditItemBtn_OnClickItem" />
            <AppBarButton x:Name="DeleteItemBtn" Label="Delete Item" Icon="Delete" Click="DeleteItem" />
            <AppBarButton x:Name="CancelSelectionBtn" Label="Cancel" Icon="Cancel" Click="CancelSelection" />
            <AppBarButton x:Name="SaveBtn" Label="Save" Icon="Save" Click="SaveBtn_OnClickSelection" />
        </CommandBar>
    </Page.BottomAppBar>
    <Page.Resources>
        <!-- When using x:Bind, you need to set x:DataType -->
        <DataTemplate x:Name="StudentListViewTemplate" x:DataType="vm:StudentViewModel">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Ellipse x:Name="Ellipse"
                         Grid.RowSpan="2"
                         Width ="32"
                         Height="32"
                         Margin="6"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Fill="LightGray"/>
                <TextBlock Grid.Column="1"
                           Text="{x:Bind FirstName}" 
                           x:Phase="1"  
                           Style="{ThemeResource BaseTextBlockStyle}"
                           Margin="12,6,0,0"/>
                <TextBlock  Grid.Column="1"
                            Grid.Row="1"
                            Text="{x:Bind LastName}" 
                            x:Phase="2"
                            Style="{ThemeResource BodyTextBlockStyle}"
                            Margin="12,0,0,6"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
              Grid.Row="1"
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="MasterColumn" Width="320"  />
                <ColumnDefinition x:Name="DetailColumn" Width="*" />
            </Grid.ColumnDefinitions>

            <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
                <TextBlock Text="Students" Margin="24,8,8,8"
                           Style="{ThemeResource TitleTextBlockStyle}" />
            </Border>

            <ListView x:Name="StudentListView" 
                  SelectionMode="Single"
                  SelectionChanged="OnSelectionChanged"
                  IsItemClickEnabled="True"
                  ShowsScrollingPlaceholders="False"
                  ItemTemplate="{StaticResource StudentListViewTemplate }"
                  Grid.Row="1"
                  x:DataType="vm:StudentViewModel"
                  ItemsSource="{x:Bind local:App.MainViewModel.Students}"
                  >
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

            <ContentPresenter
                x:Name="DetailContentPresenter"
                Grid.Column="1"
                Grid.RowSpan="2"
                BorderThickness="1,0,0,0"
                Padding="24,0"
                BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}"
                x:DataType="vm:StudentViewModel"
                Content="{x:Bind local:App.MainViewModel.SelectedStudent}"
                >
                <ContentPresenter.ContentTemplate>
                    <DataTemplate x:DataType="vm:StudentViewModel">
                        <StackPanel>
                            <TextBlock Style="{ThemeResource TitleTextBlockStyle}"
                                   Margin="0,8"       
                                   Text="{x:Bind FirstName, Mode=OneWay}"/>
                            <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                                   Margin="0,9" 
                                   Text="{x:Bind LastName, Mode=OneWay}" />
                            <TextBlock Style="{ThemeResource BodyTextBlockStyle}" 
                                   Margin="0,9" 
                                   Text="{x:Bind Mobile, Mode=OneWay}" />
                            <TextBlock Style="{ThemeResource BodyTextBlockStyle}" 
                                   Margin="0,9" 
                                   Text="{x:Bind Email, Mode=OneWay}" />
                            <ListView x:Name="listView2" HorizontalAlignment="Center" Height="235" Margin="51,10,0,0" 
                                      VerticalAlignment="Top" ItemsSource="{x:Bind local:App.MainViewModel.Subjects, Mode=OneWay}" >
                                <ListView.ItemTemplate >
                                    <DataTemplate x:Name="subjectListTemplate" x:DataType="vm:SubjectViewModel">
                                        <CheckBox x:Name="chkitems" Content="{Binding Name, Mode=OneWay}" IsChecked="{Binding IsSelected, Mode=OneWay }" IsEnabled="False">
                                        </CheckBox>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </StackPanel>
                    </DataTemplate>
                </ContentPresenter.ContentTemplate>
                <ContentPresenter.ContentTransitions>
                    <TransitionCollection/>
                </ContentPresenter.ContentTransitions>
            </ContentPresenter>

            <RelativePanel Margin="8,0,0,12" x:Name="RelativePanel" Padding="24,0" Grid.Column="1" Grid.RowSpan="2">
                <StackPanel  >
                    <TextBox
                                x:Name="FirstName"
                                MinWidth="120"
                                Margin="0,8,16,8"
                                Header="First name"
                                IsReadOnly="{x:Bind common:Converters.Not(local:App.MainViewModel.SelectedStudent.IsInEdit), Mode=OneWay}"
                                RelativePanel.AlignLeftWithPanel="True"
                                Text="{x:Bind local:App.MainViewModel.SelectedStudent.FirstName, Mode=TwoWay}"
                                Visibility="{x:Bind local:App.MainViewModel.SelectedStudent.IsInEdit, Mode=OneWay}" />
                    <TextBox
                                x:Name="LastName"
                                MinWidth="120"
                                Margin="0,8,16,8"
                                Header="Last name"
                                IsReadOnly="{x:Bind common:Converters.Not(local:App.MainViewModel.SelectedStudent.IsInEdit), Mode=OneWay}"
                                RelativePanel.RightOf="FirstName"
                                Text="{x:Bind local:App.MainViewModel.SelectedStudent.LastName, Mode=TwoWay}"
                                Visibility="{x:Bind local:App.MainViewModel.SelectedStudent.IsInEdit, Mode=OneWay}" />
                    <TextBox
                                x:Name="Mobile"
                                Grid.Row="1"
                                MinWidth="120"
                                Margin="0,8,16,0"
                                Header="Mobile"
                                IsReadOnly="{x:Bind common:Converters.Not(local:App.MainViewModel.SelectedStudent.IsInEdit), Mode=OneWay}"
                                RelativePanel.AlignLeftWithPanel="True"
                                RelativePanel.Below="FirstName"
                                Text="{x:Bind local:App.MainViewModel.SelectedStudent.Mobile, Mode=TwoWay}" />
                    <TextBox
                                x:Name="Email"
                                Grid.Column="2"
                                MinWidth="160"
                                Margin="0,8,16,0"
                                Header="Email"
                                IsReadOnly="{x:Bind common:Converters.Not(local:App.MainViewModel.SelectedStudent.IsInEdit), Mode=OneWay}"
                                RelativePanel.Below="FirstName"
                                RelativePanel.RightOf="Mobile"
                                Text="{x:Bind local:App.MainViewModel.SelectedStudent.Email, Mode=TwoWay}" />
                    <ListView x:Name="listView" HorizontalAlignment="Center" Height="235" Margin="51,10,0,0" 
                          VerticalAlignment="Top" ItemsSource="{x:Bind local:App.MainViewModel.Subjects, Mode=OneWay}" >
                        <ListView.ItemTemplate >
                            <DataTemplate x:Name="subjectListTemplate" x:DataType="vm:SubjectViewModel">
                                <CheckBox x:Name="chkitems" Content="{Binding Name, Mode=OneWay}" IsChecked="{Binding IsSelected, Mode=TwoWay }">
                                </CheckBox>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </RelativePanel>
        </Grid>
        <local:SamplesPane x:Name="MySamplesPane" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
    </Grid>
</Page>
